                            <% }else{ %>
                                <img src="/uploads/curriculum/<%= year.path %>" alt="link icon">
                            <% } %>
                            <a href="#year_container_<%= year.ID %>" alt="link to year <%= year.title %>"><%= year.title %></a>
                        </div>
                    </li>
                    <% }) %>
                    <li id="menu_item_legenda" class="menu-item">
                        <div class="nav-item">
                            <img src="/site/images/sign.png" alt="link icon">
                            <a href="#year_container_legenda" alt="Bekijk LEGENDA">LEGENDA</a>
                        </div>
                    </li>
                </ul>
